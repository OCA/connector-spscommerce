<?xml version="1.0"?>
<openerp>
    <data>
    
        <!-- checkbox to send 810 EDI invoice -->
        <record id="invoice_edi_view2" model="ir.ui.view">
            <field name="name">invoice.edi.view2</field>
            <field name="model">account.invoice</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/group" position="before">
                    <div class="oe_right oe_button_box" name="buttons" attrs="{'invisible':[('edi_yes','=', False)]}">
                        <button type="object" string="Create 810" name="action_create_text_810"/> 
                   </div>
                </xpath>
                
                <!--xpath expr="//page//field[@name='fiscal_position_id']" position="after">
                                <field name="bol_num"/>
                                <field name="tracking_num"/>  
                                <field name="scac_code"/>   
                                <field name="sender_id"/>                    
                                <field name="ship_to_code"/>
                                <field name="asn_shipment"/>
                                <field name="invoice_check" invisible="1"/>
                                <field name="edi_yes" invisible="1"/>
                                <field name="810_sent_timestamp" readonly="1" attrs="{'invisible':[('edi_yes','=', False)]}"/>
                                <field name="trading_partner_id" readonly = "1" attrs="{'invisible':[('edi_yes','=', False)]}"/>
                                <field name="ship_not_before_date" attrs="{'invisible':[('edi_yes','=', False)]}"/>
                                <field name="cancel_after_date" attrs="{'invisible':[('edi_yes','=', False)]}"/>
			    </xpath-->
                
                <xpath expr="//page//field[@name='fiscal_position_id']" position="after">

                                <field name="edi_yes"/>
                                <field name="bol_num" attrs="{'invisible':[('edi_yes','=', False)]}"/>
                                <field name="tracking_num" attrs="{'invisible':[('edi_yes','=', False)]}"/> 
                                <field name="scac_code" attrs="{'invisible':[('edi_yes','=', False)]}"/>   
                                <field name="sender_id" attrs="{'invisible':[('edi_yes','=', False)]}"/>                    
                                <field name="ship_to_code" attrs="{'invisible':[('edi_yes','=', False)]}"/>
                                <field name="asn_shipment" attrs="{'invisible':[('edi_yes','=', False)]}"/>
                                <field name="invoice_check" invisible="1"/>
                                <field name="810_sent_timestamp" readonly="1" attrs="{'invisible':[('edi_yes','=', False)]}"/>
                                <field name="trading_partner_id" readonly = "1" attrs="{'invisible':[('edi_yes','=', False)]}"/>
                                <field name="ship_not_before_date" attrs="{'invisible':[('edi_yes','=', False)]}"/>
                                <field name="cancel_after_date" attrs="{'invisible':[('edi_yes','=', False)]}"/>
			    </xpath>
                
                <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='name']" position="before">
                    <field name="buyer_part_number" invisible="1"/>
                    <field name="po_number"/>
                </xpath>
            </field>
        </record>
        
        <!-- action for writing 810 -->
        <record id="write_edi_810" model="ir.actions.server">
            <field name="name">Create 810</field>
            <field name="model_id" ref="account.model_account_invoice"/>
            <field name="state">code</field>
            <field name="code">self.action_create_text_810(cr, uid, context.get('active_ids', []), context=context)</field>
            <field name="condition">True</field>
        </record>

        <!-- server action for writing 856 -->
        <record id="ir_write_edi_856" model="ir.values">
            <field eval="'client_action_multi'" name="write_edi_810"/>
            <field eval="'account.invoice'" name="model"/>
            <field name="name">Create 810</field>
            <field eval="'ir.actions.server,%d'%write_edi_810" name="value"/>
            <field eval="True" name="object"/>
        </record>
        
    </data>
</openerp>
